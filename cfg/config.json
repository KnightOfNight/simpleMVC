{
	"application" : {
		"base_url"		: "MVC_URL",
		"domain"		: "MVC_DOMAIN",
		"base_path"		: "MVC_PATH",
		"development" : "1"
	},

	"dispatcher" : {
		"controller" : {
			"default" : "welcome",

			"welcome" : {
				"external_actions" : [ "frontpage", "logout" ],
				"internal_actions" : [ "_loginform" ],
				"default_action"   : "frontpage"
			},

			"sample" : {
				"external_actions" : [ "index", "view", "save", "update", "delete" ],
				"internal_actions" : [ "save_some_data" ],
				"default_action"   : "index",
				"items_per_page"   : "10"
			}
		}
	},

	"routes" : {
		"/^ci/" : "sample/index",
		"/^cv/" : "sample/view",
		"/^cs/" : "sample/save",
		"/^cu/" : "sample/update"
	},

	"database" : {
		"host" : "localhost",
		"port" : "3600",
		"name" : "dbname",
		"user" : "username",
		"pass" : "password"
	},

	"framework" : {
		"loglevel"	: "0",
		"name"      : "PHP MVC",
		"version"   : "0.0.0",
		"copyright" : "&copy; 2010 MCS 'Net Productions"
	}
}



